.container
  .page-header
    .pull-right
      = link_to "New User", new_user_path, class: "btn btn-info"
    %h1 Users

  %table.table
    %thead
      %tr
        %th Name
        %th Email
    %tbody
      - @users.each do |user|
        %tr
          %td.col-sm-2
            =link_to user.first_name+' '+user.last_name, user_path(user)
          %td
            =mail_to user.email
          %td
            .pull-right
              =link_to 'edit', edit_user_path(user)
              =link_to 'delete', user_path(user), method: :delete
