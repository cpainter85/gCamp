.container
  .page-header
    .pull-right
      = link_to "New User", new_user_path, class: "btn btn-info"
    %h1 Users

  %table.table
    %thead
      %tr
        %th Name
        %th Email
    %tbody
      - @users.each do |user|
        %tr
          %td.col-sm-2
            =link_to user.full_name, user_path(user)
          %td
            -if current_user.members_of_same_project(user) || current_user.admin
              =mail_to user.email
            %td
              .pull-right
                -if user == current_user || current_user.admin
                  =link_to 'Edit', edit_user_path(user)
