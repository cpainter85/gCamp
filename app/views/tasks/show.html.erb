<div class="container">
  <div class="page-header">
    <div class="pull-right">
      <%= link_to "Edit", edit_task_path(@task), class: "btn btn-info" %>
    </div>
    <h1>
      <% if @task.complete %>
        <s><%= @task.description %></s>
      <% else %>
        <%= @task.description %>
      <% end %>
    </h1>
  </div>

  <div class="row">
    <ol class="breadcrumb">
      <li> <%= link_to "Tasks", tasks_path %></li>
      <li> <%= @task.description %></li>
    </ol>
  </div>
    <p><strong>Due On:</strong>

      <% if @task.due_date %>
        <%= @task.due_date.strftime("%m/%d/%Y") %>
      <% else %>
      <% end %>

    </p>


</div>
