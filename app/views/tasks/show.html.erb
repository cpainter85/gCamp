<div class="container">
  <div class="page-header">
    <div class="pull-right">

      <%= link_to "Edit", edit_task_path(@task), class: "btn btn-info" %>
    </div>
    <% if @task.complete %>
      <h1><s><%= @task.description %></s></h1>
    <% else %>
      <h1><%= @task.description %></h1>
    <% end %>
  </div>

  <div class="row">
    <ol class="breadcrumb">
      <li> <%= link_to "Tasks", tasks_path %></li>
      <li> <%= @task.description %></li>
    </ol>
  </div>
    <p><strong>Due On:</strong>

      <% if @task.due_date %>
        <%= @task.due_date.strftime("%m/%d/%Y") %>
      <% else %>
      <% end %>

    </p>


</div>
