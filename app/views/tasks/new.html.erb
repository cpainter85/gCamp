<div class="container">
  <div class="page-header">
    <h1>New task</h1>
  </div>

  <div class="row">
    <ol class="breadcrumb">
      <li> <%= link_to "Tasks", tasks_path %></li>
      <li>New Task</li>
    </ol>
  </div>

  <%= form_for @task, hmtl: {class: "form-horizontal"} do |f| %>



    <div class="form-group">
      <div class="row">
          <%= f.label :description, class: "col-sm-1 control-label" %>
        <div class="col-sm-6">
          <%= f.text_field :description, class: "form-control" %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="form-group">
        <div class="col-sm-offset-1 col-sm-6">
          <%= f.submit class: "btn btn-primary" %>
          <%= link_to "Cancel", tasks_path, class: "btn btn-default" %>
        </div>
      </div>
    </div>
  <% end %>

</div>
