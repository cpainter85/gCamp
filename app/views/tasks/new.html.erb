<div class="container">
  <div class="page-header">
    <h1>New task</h1>
  </div>

  <!-- <ol class="breadcrumb">
    <li> <%= link_to "Tasks", tasks_path %></li>
    <li>New Task</li>
  </ol> -->


  <%= form_for @task, hmtl: {class: "form-horizontal"} do |f| %>
    <div class="form-group">
      <div class="row">
        <div class="col-sm-4">
          <%= link_to "Tasks", tasks_path %> > New Task
        </div>
      </div>
    </div>


    <div class="form-group">
      <div class="row">

        <%= f.label :description, class: "col-sm-1" %>

        <%= f.text_field :description, class: "col-sm-4" %>
      </div>
    </div>
    <div class="row">
      <%= f.submit class: "btn btn-primary col-sm-offset-1" %>
      <%= link_to "Cancel", tasks_path, class: "btn btn-default" %>
    </div>
  <% end %>

</div>
